<body>
    <div class="naglowek">

        <a href='/'><img src="https://meerhouse.pl/wp-content/uploads/files/logo.jpg" id="logo"></a>
       
        <% for(var i=0; i<b.length; i++)
        { %>

        <% } %>  

        <div class="kontrolki">
     
         <a href="/"><div class="odnosnik">                                  Strona główna</div></a> <hr id="pion">
         <a href='/dodaj'><div class="odnosnik">                             Dodaj nieruchomość</div></a><hr id="pion">
         <a href='/aktualizacja'> <div class="odnosnik" id="current_page">   Aktualizacja danych  </div></a><hr id="pion">
         <a href='/usuwanie'><div class="odnosnik">                          Usuń nieruchomość  </div></a><hr id="pion">
