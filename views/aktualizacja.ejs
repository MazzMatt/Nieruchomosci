        </div>
         </div>

    
         <div class="tlo">
            <div class="filtrowanie">
                        <h1><b>Aktualizuj dane nieruchomości</b></h1>
            </div>
            </div>
    

         <div class="glowny">
            
                <% for(let i=0; i<a.length; i++)
                { %>
                <form action="/zmien">
                <table>
                    <tr  class="main_tr">
                        <td rowspan="2"><img src="<%=  a[i].zdjecie  %>" class="FOTO_OFERTY"></td>
                        <td>Adres zdjęcia</td>
                        <td>Id</td>
                        <td>Cena</td>
                        <td>Powierzchnia</td>
                        <td>Rodzaj budynku</td>
                        <td>Piętro</td>
                        <td>Typ</td>
                        <td>Miasto</td>
                        <td>Ulica</td>
                        <td>Zatwierdz</td>
                     </tr>  
                     <tr> 
                        <td><input type="text" name="adres_zdjecia" class="ADRES_ZDJECIA" value="<%=  a[i].zdjecie  %>"></td>
                        <td><input type="number" name="id" class="ID" value="<%=  a[i].id  %>"></td>
                        <td><input type="number" name="cena" class="CENA" value="<%=  a[i].cena  %>"></td>
                        <td><input type="number" name="powierzchnia" class="POWIERZCHNIA" value="<%=  a[i].powierzchnia  %>"></td>
                        <td>
                            <select name="rodzaj_budynku" class="RODZAJ_BUDYNKU">
                                <option><%=  a[i].rodzaj_budynku %></option>
                                <option>Dom</option>
                            </select>
                        </td>
                        <td><input type="number" name="pietro" class="PIETRO" value="<%=  a[i].pietro  %>"></td>
                        <td>
                            <select name="typ" class="TYP">
                                <option><%=  a[i].typ %></option>
                                <option>Wynajem</option>
                            </select>
                        </td>
                        <td><input type="text" name="miasto" class="MIASTO" value="<%=  a[i].miasto  %>"></td>
                        <td><input type="text" name="ulica" class="ULICA" value="<%=  a[i].ulica  %>"></td>
                        <td><input type="submit" class="SUBMIT" value="Aktualizuj"></td>
                    </tr>
                    </table>
                    <input type="hidden" name="_adres_zdjecia" value="<%= a[i].zdjecie %>">
                    <input type="hidden" name="_id" value="<%= a[i].id %>">
                    <input type="hidden" name="_cena" value="<%= a[i].cena %>">
                    <input type="hidden" name="_powierzchnia" value="<%= a[i].powierzchnia %>">
                    <input type="hidden" name="_rodzaj_budynku" value="<%= a[i].rodzaj_budynku %>">
                    <input type="hidden" name="_pietro" value="<%= a[i].pietro %>">
                    <input type="hidden" name="_typ" value="<%= a[i].typ %>">
                    <input type="hidden" name="_miasto" value="<%= a[i].miasto%>">
                    <input type="hidden" name="_ulica" value="<%= a[i].ulica %>">
                    </form>
            
                <% } %> 
         </div>
         
   
