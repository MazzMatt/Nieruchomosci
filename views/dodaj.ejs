<body>
    <div class="naglowek">

        <a href='/'><img src="https://meerhouse.pl/wp-content/uploads/files/logo.jpg" id="logo"></a>
       
        <% for(var i=0; i<b.length; i++)
        { %>

        <% } %>  

        <div class="kontrolki">
     
            <a href="/"><div class="odnosnik">                                       Strona główna</div></a> <hr id="pion">
            <a href='/dodaj'><div class="odnosnik" id="current_page">                Dodaj nieruchomość</div></a><hr id="pion">
