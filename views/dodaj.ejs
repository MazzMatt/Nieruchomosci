        </div>
         </div>

    
         <div class="tlo">
            <div class="dodaj_nieruchomosc">
                
                <form action="/dodawanie">

                    <table id="tabela">
                        <tr><h1><b>Dodaj nieruchomość</b></h1></tr>
                        <tr>
                            <td><input type="number" name="id"           class="ID"           placeholder="ID..."></td>
                            <td><input type="number" name="cena"         class="CENA"         placeholder="CENA..."></td>
                            <td><input type="number" name="powierzchnia" class="POWIERZCHNIA" placeholder="POWIERZCHNIA..."></td>
                        </tr>
                       
                        <tr>
                            <td><input type="number" name="pietro"          class="PIETRO"           placeholder="PIĘTRO..."></td>
                            <td>
                                <select class="MIESZKANIE" name="rodzaj_budynku">
                                    <option disabled selected hidden>Mieszkanie</option>
                                    <option>Mieszkanie</option>
                                    <option>Dom</option>
                                </select>
                            </td>
                            <td><input type="text"   name="miasto"   class="MIASTO"   placeholder="MIASTO..."></td>
                        </tr>
                        
                        <tr>
                            <td>
                                <select class="TYP" name="typ">
                                    <option disabled selected hidden>Sprzedaż...</option>
                                    <option>Sprzedaż</option>
                                    <option>Wynajem</option>
                                </select>
                            </td>
                            <td><input type="text" name="ulica" class="ULICA"   placeholder="ULICA..."></td>
                            <td><input type="text" name="zdjecie" class="ZDJECIE"   placeholder="ADRES ZDJĘCIA..."></td>
            
                        </table>
                        <input type="submit" class="SUBMIT" value="Dodaj nieruchomość">
                </form>
            </div>
            </div>
    

